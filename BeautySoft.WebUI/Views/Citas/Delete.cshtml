@model BeautySoft.Domain.Entities.Cita
@{
    ViewData["Title"] = "Eliminar cita";
}
<h1 class="mb-3">@ViewData["Title"]</h1>
<div class="alert alert-warning">¿Eliminar la cita #@Model.CitaId?</div>
<form asp-action="Delete" method="post">
    <input type="hidden" name="citaId" value="@Model.CitaId" />
    <button class="btn btn-danger">Sí, eliminar</button>
    <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
</form>
