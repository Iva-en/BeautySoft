@model BeautySoft.Domain.Entities.Cita
@{
    ViewData["Title"] = "Editar cita";
}
<h1 class="mb-3">@ViewData["Title"]</h1>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
    <input type="hidden" asp-for="CitaId" />

    <div class="mb-3">
        <label class="form-label">Cliente</label>
        <select asp-for="ClienteId" class="form-select" asp-items="ViewBag.Clientes"></select>
        <span asp-validation-for="ClienteId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Estilista</label>
        <select asp-for="EstilistaId" class="form-select" asp-items="ViewBag.Estilistas"></select>
        <span asp-validation-for="EstilistaId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Servicio</label>
        <select asp-for="ServicioId" class="form-select" asp-items="ViewBag.Servicios"></select>
        <span asp-validation-for="ServicioId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="FechaHora" class="form-label"></label>
        <input asp-for="FechaHora" class="form-control" type="datetime-local" />
        <span asp-validation-for="FechaHora" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Estado</label>
        <select asp-for="Estado" class="form-select" asp-items="ViewBag.Estados"></select>
        <span asp-validation-for="Estado" class="text-danger"></span>
    </div>

    <div class="mb-3"><label asp-for="PrecioFinal" class="form-label"></label><input asp-for="PrecioFinal" class="form-control" type="number" step="0.01" /></div>
    <div class="mb-3"><label asp-for="Notas" class="form-label"></label><textarea asp-for="Notas" class="form-control"></textarea></div>

    <button class="btn btn-primary">Guardar cambios</button> <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
