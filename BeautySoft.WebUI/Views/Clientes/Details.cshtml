@model BeautySoft.Domain.Entities.Cliente
@{
    ViewData["Title"] = "Detalles del cliente";
}
<h1 class="mb-3">@ViewData["Title"]</h1>
<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Nombre</dt>
            <dd class="col-sm-9">@Model.Nombre</dd>
            <dt class="col-sm-3">Teléfono</dt>
            <dd class="col-sm-9">@Model.Telefono</dd>
            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>
            <dt class="col-sm-3">Activo</dt>
            <dd class="col-sm-9">@(Model.Activo ? "Sí" : "No")</dd>
        </dl>
        <a asp-action="Edit" asp-route-id="@Model.ClienteId" class="btn btn-primary">Editar</a>
        <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
    </div>
</div>
