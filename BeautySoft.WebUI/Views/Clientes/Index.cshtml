@model IEnumerable<BeautySoft.Domain.Entities.Cliente>
@{
    ViewData["Title"] = "Clientes";
}
<h1 class="mb-3">Clientes</h1>

<p><a class="btn btn-primary" asp-action="Create">Nuevo cliente</a></p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Teléfono</th>
            <th>Email</th>
            <th>Activo</th>
            <th class="text-end">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model ?? Enumerable.Empty<BeautySoft.Domain.Entities.Cliente>())
        {
            <tr>
                <td>@c.Nombre</td>
                <td>@c.Telefono</td>
                <td>@c.Email</td>
                <td>@(c.Activo ? "Sí" : "No")</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@c.ClienteId">Detalles</a>
                    <a class="btn btn-sm btn-secondary" asp-action="Edit" asp-route-id="@c.ClienteId">Editar</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@c.ClienteId">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
