@model BeautySoft.Domain.Entities.Estilista
@{
    ViewData["Title"] = "Eliminar estilista";
}
<h1 class="mb-3">@ViewData["Title"]</h1>
<div class="alert alert-warning">¿Eliminar al estilista <strong>@Model.Nombre</strong>?</div>
<form asp-action="Delete" method="post">
    <input type="hidden" name="estilistaId" value="@Model.EstilistaId" />
    <button class="btn btn-danger">Sí, eliminar</button>
    <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
</form>
