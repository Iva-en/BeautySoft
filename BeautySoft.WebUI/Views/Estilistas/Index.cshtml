@model IEnumerable<BeautySoft.Domain.Entities.Estilista>
@{
    ViewData["Title"] = "Estilistas";
}
<h1 class="mb-3">Estilistas</h1>

<p><a class="btn btn-primary" asp-action="Create">Nuevo estilista</a></p>

<table class="table table-striped">
    <thead><tr><th>Nombre</th><th>Teléfono</th><th>Email</th><th>% Comisión</th><th>Activo</th><th class="text-end">Acciones</th></tr></thead>
    <tbody>
        @foreach (var e in Model ?? Enumerable.Empty<BeautySoft.Domain.Entities.Estilista>())
        {
            <tr>
                <td>@e.Nombre</td>
                <td>@e.Telefono</td>
                <td>@e.Email</td>
                <td>@e.PorcentajeComision</td>
                <td>@(e.Activo ? "Sí" : "No")</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@e.EstilistaId">Detalles</a>
                    <a class="btn btn-sm btn-secondary" asp-action="Edit" asp-route-id="@e.EstilistaId">Editar</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@e.EstilistaId">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
