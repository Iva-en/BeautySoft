@model IEnumerable<BeautySoft.Domain.Entities.Servicio>
@{
    ViewData["Title"] = "Servicios";
}

<h1 class="mb-3">@ViewData["Title"]</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Nuevo servicio</a>
</p>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-light">
        <tr>
            <th>Nombre</th>
            <th>Duración (min)</th>
            <th>Precio</th>
            <th>Activo</th>
            <th class="text-end">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model ?? Enumerable.Empty<BeautySoft.Domain.Entities.Servicio>())
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.DuracionMinutos</td>
                <td>@item.Precio.ToString("N2")</td>
                <td>@(item.Activo ? "Sí" : "No")</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.ServicioId">Detalles</a>
                    <a class="btn btn-sm btn-secondary" asp-action="Edit" asp-route-id="@item.ServicioId">Editar</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.ServicioId">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
